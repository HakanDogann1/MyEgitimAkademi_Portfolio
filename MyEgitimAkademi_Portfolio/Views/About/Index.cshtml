@model List<MyEgitimAkademi_Portfolio.Models.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<h2>Hakkımda Sayfası</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ad Soyad</th>
        <th>Ünvan</th>
        <th>Resim</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.AboutId</th>
            <td>@item.AboutIntroduction</td>
            <td>@item.AboutTitle2</td>
            <td>@item.AboutTitle3</td>
            <td>@item.AboutDescription</td>
            <td>@item.AboutImage</td>
            <td><a href="/About/DeleteAbout/@item.AboutId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-outline-warning">Güncelle</a></td>
        </tr>
    }
</table>
<br />
<a href="/About/AddAbout/" class="btn btn-outline-success">Ekle</a>


