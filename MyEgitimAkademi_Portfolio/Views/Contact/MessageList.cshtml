@model List<MyEgitimAkademi_Portfolio.Models.Contact>
@{
    ViewBag.Title = "MessageList";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<h2>İletişim Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Mail</th>
        <th>Konu</th>
        <th>Mesaj</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.ContactId</th>
            <td>@item.ContactName</td>
            <td>@item.ContactMail</td>
            <td>@item.ContactSubject</td>
            <td>@item.ContactMessage</td>
            <td><a href="/Contact/DeleteMessage/@item.ContactId" class="btn btn-outline-danger">Sil</a></td>
        </tr>
    }
</table>

