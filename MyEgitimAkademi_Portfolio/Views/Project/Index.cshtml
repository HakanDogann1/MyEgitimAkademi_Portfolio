@model List<MyEgitimAkademi_Portfolio.Models.Project>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<h2>Projelerim</h2>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Proje Adı</th>
        <th>Kategori</th>
        <th>İçerik</th>
        <th>Fiyat</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
       <tr>
           <th>@item.ProjectId</th>
           <td>@item.ProjectTitle</td>
           <td>@item.Category.CategoryName</td>
           <td>@item.ProjectDescription</td>
           <td>@item.Price</td>
           <td><a href="/Project/DeleteProject/@item.ProjectId" class="btn btn-outline-danger">Sil</a></td>
           <td><a href="/Project/UpdateProject/@item.ProjectId" class="btn btn-outline-warning">Güncelle</a></td>
       </tr>
    }
</table>
<br />
<a href="/Project/AddProject/" class="btn btn-outline-success">Ekle</a>

