@model List<MyEgitimAkademi_Portfolio.Models.Service>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<h2>Hizmet Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>Hizmet Id</th>
        <th>Hizmet Adı</th>
        <th>Hizmet Sil</th>
        <th>Hizmet Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.ServiceId</th>
            <td>@item.ServiceName</td>
            <td><a href="/Service/DeleteService/@item.ServiceId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Service/UpdateService/@item.ServiceId" class="btn btn-outline-warning">Güncelle</a></td>
        </tr>
    }
</table>
<br />
<a href="/Service/AddService/" class="btn btn-outline-success">Ekle</a>

