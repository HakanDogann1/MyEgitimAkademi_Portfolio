@model MyEgitimAkademi_Portfolio.Models.Testimonial
@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<h2>Referans Güncelleme Sayfası</h2>
<form method="post">
    @Html.HiddenFor(x=>x.TestimonialId)
    <label>Referans Adı Soyadı</label>
    @Html.TextBoxFor(x=>x.TestimonialNameSurname , new {@class="form-control"})
    <br />
    <label>Referans Unvan</label>
    @Html.TextBoxFor(x=>x.TestimonialUnvan , new {@class="form-control"})
    <br />
    <label>Referans Görseli</label>
    @Html.TextBoxFor(x=>x.TestimonialImage , new {@class="form-control"})
    <br />
    <label>Referans Yorumu</label>
    @Html.TextAreaFor(x=>x.TestimonialComment,5,1 , new {@class="form-control"})
    <br />
    <button class="btn btn-outline-warning">Güncelle</button>
</form>


